<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewmodel" type="com.killinsun.android.okazulogkt.screen.okazulog.OkazuLogViewModel" />
        <variable name="position" type="Integer" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">


            <ImageView
                android:id="@+id/recipieImageIv"
                android:layout_width="84dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:contentDescription="recipie image"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/recipieNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@{viewmodel.recipies[position].name}"
                android:textAlignment="viewStart"
                android:textSize="24sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>